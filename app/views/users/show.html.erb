<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
	  </h1>
	  <h2>
	    <%= link_to "Create a new project", new_user_project_path(current_user.id), class: "btn btn-md btn-primary" %>
      </h2>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.projects.any? %>
      <h3>Projects (<%= @user.projects.count %>)</h3>
      <ol class="projects">
        <%= render @projects %>
      </ol>
      <%= will_paginate @projects %>
    <% end %>
  </div>
</div>
