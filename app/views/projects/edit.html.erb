<% provide(:title, "Edit project") %>
<h1>Edit project</h1>
<% if current_user?(@project.user_id) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@project, url: edit_user_project_path(current_user.id)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :synopsis %>
      <%= f.text_area :synopsis, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<% else %>
  <%controller.redirect_to root_url %>
<% end %>