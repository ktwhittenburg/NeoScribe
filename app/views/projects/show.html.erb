<% provide(:title, @project.title) %>

<div class="row">
  <div class="col-md-12">
    <section class="user_info">
      <h1>
        <%= @project.title %>
	  </h1>
	  <h3><small>
	    <%= @project.synopsis %>
	  </small></h3>
	  <h2>
	    <%= link_to "Create a new trial", new_project_trial_path(@project), class: "btn btn-md btn-primary" %>
      </h2>
    </section>
  </div>
</div>
  </div>
  <div class="col-md-12">
    <% if @project.trials.any? %>
      <h3>Trials (<%= @project.trials.count %>)</h3>
      <ol class="trials">
        <%= render @trials %>
      </ol>
      <%= will_paginate @trials %>
    <% end %>
  </div>
</div>
